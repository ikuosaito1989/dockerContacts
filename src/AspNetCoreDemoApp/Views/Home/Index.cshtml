@model src.Controllers.ContactViewModel 
@{
     ViewData["Title"] = "ITunEsTooLお問い合わせ"; 
}

<!-- Contact -->
<section id="contact">

    <div class="container">
        <div class="row">
            <h2>@Model.Complite</h2>
        </div>  
        <div asp-validation-summary="All" class="alert-box ss-error hideit"></div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">お問い合わせ</h2>
                <h3 class="section-subheading text-muted">お問い合わせのご回答は１〜５日程度かかりますのでご了承下さい。</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="fm" asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>お名前</label>
                                <input class="form-control" asp-for="Name" placeholder="山田　太郎" />
                            </div>
                            <div class="form-group">
                                <label>メールアドレス</label>
                                <input class="form-control" asp-for="Email" placeholder="itunestool.jp@gmail.com" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>お問い合わせ内容</label>
                                <textarea class="form-control" asp-for="Message" placeholder="〇〇の機能を追加して欲しい。" /></textarea>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">送信</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>